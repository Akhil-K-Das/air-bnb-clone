<div data-controller= "users-by-email-auth">
    <div class= "flex ">
        <div class= "flex-none cursor-pointer" data-modal-target="closeButton">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                <path stroke-linecap="round" stroke-linejoin="round" d="M6 18 18 6M6 6l12 12" />
            </svg>
        </div>
        <div class= "grow">
            <h3 class="pr-7 mb-4 text-sm text-center font-medium text-dark-500 dark:text-gray-800">Log in/ Sign Up</h3>
